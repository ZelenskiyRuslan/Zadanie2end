        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Zadanie2end.MainWindow"
        Title="Авторизация" Width="400" Height="300">
	<StackPanel Margin="20">
		<TextBlock Text="Введите ваше имя пользователя" FontSize="18" Margin="0,0,0,10"/>
